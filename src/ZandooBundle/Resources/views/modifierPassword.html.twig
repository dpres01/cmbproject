{% extends 'base.html.twig' %}
{% block body %}
    {% for message in  app.flashes('succes') %}  
        <div class="alert alert-success" role="alert">
            {{ message}}
        </div> 
    {% endfor%}    
    {% for message in  app.flashes('error') %} 
        <div class="alert  alert-danger" role="alert">
            {{ message}}
        </div>   
    {% endfor%}
    <link rel="stylesheet" href="{{ asset('public/css/forgot-pass.css') }}" type="text/css"/>  
    {{form_start(form)}}
	<div class="for-content">
		<div class="ins-lf">
			<div class="ins-bx">
				<div class="ins-bx-title">
					<h4 class="ins-bx-title-clr">Réinitialiser mot de passe du compte</h4>
				</div>
				<div class="ins-bx-inp">
					<div style="padding-top:5px;">
						{{form_widget(form)}}
					</div>
				</div>
			</div>		
			<div style="margin:20px 0 40px 0;">							
				<div class="ins-btn">
					<div class="btnfm" onclick="$(this).closest('form').submit();">
						<b>Soumettre</b>
					</div>
				</div>
			</div>
		</div>
		<div class="ins-rt">
			<div class="ins-rt-txt">
				<b>Zandoo</b> - reliant des millions d'acheteurs et des vendeurs depuis 2002.
			</div>
			<div class="ins-rt-txt2">
				<div class="ins-rt-txt2-lf">
					<img src="{{ asset('public/img/lock.png') }}">
				</div>	
				<div class="ins-rt-txt2-rt">				
					Vos informations personnelles sont protégées par la politique de confidentialité de Zandoo et cryptées par la technologie SSL standard de l'industrie pour une expérience d'achat sûre.
				</div>	
				<div style="clear:both;"></div>	
			</div>
		</div>
		<div style="clear:both;"></div>	
	</div>
    {{form_widget(form)}}
    {{form_end(form)}}
{% endblock %}

