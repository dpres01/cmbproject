{% set search = search %}
{% set category = cat %}
{% set titre = titres %}
{% set urgente = urgentes %}
{% extends 'base.html.twig' %}
{% block body %}
	<link rel="stylesheet" href="{{ asset('public/css/lister-annonce.css') }}" type="text/css"/> 
	<div class="bg-cont-annonce">
		<div class="cont-annonce">
			<div class="annonce-l" style="">
				<div class="bx-filter" style="">
					<div class="btn-filter" style="text-align:right;">
						<i class="fa fa-sliders" aria-hidden="true" style="cursor:pointer;" onclick="shfilter();"></i>
					</div>
					<div id="filter-annonce" class="shfilter">
						<div style="font-weight:bold;">Prix</div>
						<div class="filter-prix">
							<div style="float:left;">
								<input type="text" value="" class="filter-prix-inp">
							</div>
							<div style="float:right;">
								<input type="text" value="" class="filter-prix-inp">
							</div>
							<div style="clear:both;"></div>
						</div>
						<div class="filter-title">Catégories</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								Appartement
							</div>
							<div style="clear:both;"></div>
						</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								Maison
							</div>
							<div style="clear:both;"></div>
						</div>
						<div class="filter-title">Distance</div>
						<div style="margin-top:5px;">
							<div style="">
								<input type="text" value="" placeholder="Paris" class="filter-dist-inp">
							</div>
							<div style="margin-top:10px;">
								<input type="text" value="" placeholder="1km" class="filter-dist-inp">
							</div>
							<div style="clear:both;"></div>
						</div>
						<div class="filter-title">Critères</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								20m²
							</div>
							<div style="clear:both;"></div>
						</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								40m²
							</div>
							<div style="clear:both;"></div>
						</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								60m²
							</div>
							<div style="clear:both;"></div>
						</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								80m²
							</div>
							<div style="clear:both;"></div>
						</div>
						<div class="filter-title">Types d'offres</div>
						<div style="margin-top:5px;">
							<div style="float:left;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								Offres <span class="filter-nb">(1 251)</span>
							</div>
							<div style="float:left;margin-left:35px;">
								<input type="checkbox" value="" style="">
							</div>
							<div class="filter-marg">
								Demandes <span class="filter-nb">(840)</span>
							</div>
							<div style="clear:both;"></div>
						</div>
					</div>
				</div>
			</div>
                       
			<div class="annonce-r" style="">
				{% for val in annonces %}
                                  
					{% if loop.index == 1 %}
						{% set marg = 0 %}
					{% else %}
						{% set marg = 25 %}
					{% endif %}
                                         
					<div class="bxanon" style="margin-top:{{ marg }}px;height:100%;">				
						<div class="bxanon-img" style="height:100%;">
                                                    {%if zandoo_service_commun.testExistanceImg(val.images) %}
                                                          <img src="{{asset('bundles/zandoo/uploads/documents/'~val.images[0].id~'.'~val.images[0].url)}}" class="imgmax">
                                                          
                                                    {%else%}
                                                          <img src="{{ asset('bundles/zandoo/img/nopic1.png')}}" class="imgmax">
                                                    {%endif%}
						</div>
						<div class="bx-txt">
							<div class="bx-title truncate">{{ zandoo_service_commun.titreFormatAnnonce(val.titre) }}</div>
							<div class="bx-txt-nor">
								<div class="bx-txt-nor-price-box">
									<div class="bx-txt-nor-price">{{ val.prix }} {{ zandoo_service_commun.typeMonnaie(val.monnaie) }}</div>
									<div style="margin-top:15px;">
										<div class="bx-txt-nor-price-offer">
											<a href="{{ path('afficher_annonce', {'id': val.id}) }}" class="lk-b">Voir offre</a>
										</div>
									</div>
									<div style="margin-top:15px;text-align:center;">
										{{ zandoo_service_commun.dateConvertText(val.dateCreation) }}
									</div>
								</div>
								<div style="float:left;width:350px;">
									<div style="font-size:13px;padding-top:5px;"><b>Description</b>:</div>
									<div style="margin-top:10px;">
										{{ val.description }}
									</div>
								</div>
								<div style="clear:both;"></div>
							</div>
							<div class="bx-txt-resp">
								<div class="bx-price-offer">					
									<div class="bx-price">{{ val.prix }} {{ zandoo_service_commun.typeMonnaie(val.monnaie) }}</div>
									<div style="float:left;">
										<div class="bx-offer">
											Voir offre
										</div>
									</div>
									<div style="clear:both;"></div>
								</div>
								<div class="tabgrd" style="">
									{{ val.description }}
								</div>
								<div class="bx-date" style="">
									{{ zandoo_service_commun.dateConvertText(val.dateCreation) }}
								</div>
							</div>
						</div>
						<div style="clear:both;"></div>
					</div>
				{% endfor %}
				<div style="background:#fff;padding:10px;border:1px solid #ccc;margin-top:35px;">					
					<table style="width:100%;">
						<tr>
							<td style="width:15%;">
								<div style="padding:5px;text-align:center;border:1px solid #ccc;background:#fff;">Précédent</div>
							</td>
							<td style="width:70%;">
								<div style="margin:0 auto;width:100%;max-width:80px;">
									<span data-page-number="1" data-offset="0" class="currPage">1</span><span data-page-number="1" data-offset="0" class="nextPage">2</span>
								</div>
							</td>
							<td style="width:15%;">
								<div style="padding:5px;text-align:center;border:0px solid #ccc;background:#005999;color:#fff;">Suivant</div>
							</td>
						</tr>
					</table>
				</div>
			</div>		
			<div style="clear:both;"></div>
		</div>
	</div>
{% endblock %}

