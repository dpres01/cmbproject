 {% extends 'base.html.twig' %}
 {% block body %}
    {% set isConnected  = "" %}
    {% if app.user is not empty or form.vars.value.id%}
        {% set isConnected  = "cached" %}
    {%endif%}

     {% for message in  app.flashes('succesAnnonce') %}  
        <div class="alert alert-success" role="alert">
            {{ message}}
        </div> 
    {% endfor%}
  
   <div id="annonce" style="padding-bottom:550px">  
        <p> DÃ©poser votre annonce ici </p>
        {{form_start(form)}}        
         {{form_errors(form)}}
        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.categorie)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.categorie)}}
          </div>
        </div>  

        <div class="col-md-12 no_pading ">
          <div class="col-md-4">
          {{form_widget(form.type)}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-4">
          {{form_widget(form.utilisateur.isProfessionnel)}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.titre)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.titre)}}
          </div>
        </div>
        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.description)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.description)}}
          </div>
        </div> 
        {# ------------ Bloc prix et monnaie  ------------------ #}
        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.prix)}}
          </div>
          <div class="col-md-3">
          {{form_widget(form.prix)}}
          </div>
          <div class="col-md-1">
          {{form_widget(form.monnaie)}}
          </div>
        </div> 
          
        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
              {{form_label(form.utilisateur.username)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.utilisateur.username,{attr:{class:isConnected}})}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.utilisateur.email)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.utilisateur.email,{attr:{class:isConnected}})}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.utilisateur.password)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.utilisateur.password,{attr:{class:isConnected}})}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.utilisateur.telephone)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.utilisateur.telephone,{attr:{class:isConnected}})}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.utilisateur.adresse)}}
          </div>
          <div class="col-md-4">
             {{form_widget(form.utilisateur.adresse,{attr:{class:isConnected}})}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">
          <div class="col-md-2 text-left">   
             {{form_label(form.utilisateur.ville)}}
          </div>
          <div class="col-md-4">
          {{form_widget(form.utilisateur.ville,{attr:{class:isConnected}})}}
          </div>
        </div> 

        <div class="col-md-12 no_pading ">                 
          <div class="col-md-4">
          {{form_widget(form.afficherTel)}}
          </div>
        </div> 
{#------------------------Bloc image ---------------------------#}
        <ul id="email-fields-list"
            data-prototype="{{ form_widget(form.images.vars.prototype)|e }}"
            data-widget-tags="{{ '<li></li>'|e }}">
            {% for image in form.images %}
                <li>
                    {{ form_errors(image) }}
                    {{ form_widget(image) }}
                </li>
            {% endfor %}
       </ul>

    <button type="button" class="add-another-collection-widget" data-list="#email-fields-list">
        Ajouter une photo
    </button>
        
        <div class="col-md-12 no_pading "> 
          <div class="col-md-4">
             <input type="submit" value="Enregistrer">
          </div>  
        </div>          
   {{form_end(form)}}
   </div>
   
   <script type='text/javascript'>
       $(document).ready(function(){
          $('.cached').parent().parent().each(function(){
             $(this).remove();
          })  
        })
   </script>
 {% endblock %}

