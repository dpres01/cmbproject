{% extends 'base-admin.html.twig' %}
{% block body %}
<div class="panel panel-default">
    <div class="panel-heading"> 
        <h2> LISTE DES UTILISATEURS </h2>
    </div>
    <div class="panel-body">
        <table id="table-users" class="table table-striped table-bordered" style="width:100%"> 
            <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>E-mail</th>
                    <th>Professionnel</th>
                    <th>Administrateur</th>
                    <th>Date de cr√©ation</th>
                    <th> Actif </th>
                    <th> Action </th>
                </tr>
            </thead> 
            <tboby>
            {% for user in users %}
                <tr>
                    <form action = "{{url}}/{{user.id}}" method="post">
                    <td>{{user.username}} </td>
                    <td>{{user.email}} </td>

                    <td><input type="checkbox" value="{{user.isProfessionnel}}" {%if user.isProfessionnel%}checked{%endif%} name="professionnel"> </td>
                    <td><input type="checkbox" value="{{user.isAdmin}}" {%if user.isAdmin%}checked{%endif%} name="admin"> </td>           
                    <td>{{user.dateCreation|date('d/m/Y')}} </td>
                    <td><input id="id-etat-user" type="checkbox"  {%if user.actif%}checked{%endif%} name="actif"></td>
                    <td><button type="submit" class=" btn-primary"> Modifier </button></td>
                </form>    
                </tr>
            {%endfor%}
             </tboby> 
        </table> 
    </div>
</div>            
{% endblock  %}
  